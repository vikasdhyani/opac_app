<%= javascript_include_tag 'delivery_order'%>
<div class="span-4 colborder">
	<div class="span-4">
		<p></p>
		<p><%= link_to "New Requests", ibtrs_path(:state => 'New') %> </p>
		<p><%= link_to "Assigned Requests", ibtrs_path(:state => 'Assigned') %> </p>
		<p><%= link_to "PO Placed", ibtrs_path(:state => 'POPlaced') %> </p>
		<p><%= link_to "Declined Requests", ibtrs_path(:state => 'Declined') %> </p>
		<p><%= link_to "Fulfilled Requests", ibtrs_path(:state => 'Fulfilled') %> </p>
		<p><%= link_to "Cancelled Requests", ibtrs_path(:state => 'Cancelled') %> </p>
		<p><%= link_to "Dispatched Requests", ibtrs_path(:state => 'Dispatched') %> </p>
		<p><%= link_to "Received Requests", ibtrs_path(:state => 'Received') %> </p>
		<p><%= link_to "Delivered Requests", ibtrs_path(:state => 'Delivered') %> </p>
        <p><%= link_to "Timedout Requests", ibtrs_path(:state => 'Timedout') %> </p>
		<p><%= link_to "All Requests", ibtrs_path %>	</p>
	</div>
	<hr/>
	<div class="span-4">
		<p></p>
		<p><%= link_to "Search", ibtrs_search_path %>	</p>
    <p><%= link_to "Sort Failed Search", consignments_booksearch_path %> </p>
	</div>
	<hr/>
	<div class="span-4">
		<p></p>
		<p><%= link_to "Home", root_path %>	</p>
    <p><%= link_to "Back", :back %> </p>
	</div>
</div>

<div class="span-14">
  <section class="span-14 round">
	<% flash.each do |key, value| %>
		<div class="flash <%= key %>"><%= value %></div>
	<% end %>
  </section>
  <br/>
  <hr/>
  <form method="GET" action="<%= search_delivery_orders_path %>">
    Search By Member Number: <input name="criteria[membership_no]"/>
    <input type="submit"/>
  </form>
  <br/>
  <hr/>
  <div class="order_lists">
    <%= render :partial => "order_list", :collection => @order_lists %>
    <hr />
    <%= will_paginate(@order_lists) %>
  <br/>
  <hr />
  </div>
  <script type="text/javascript">
    $(document).ready(function(){
      new Strata.DeliveryOrder($(".order_lists"));
    });
  </script>
  <%= date_select "appointment", "delivery_date" %>
</div>